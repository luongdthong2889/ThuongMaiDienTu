@model DoGiaDung.Models.USER

@{
    ViewBag.Title = "ThongTin";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

    <section id="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <br /><br /><br />
                    <h2>Thông tin người dùng</h2>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                <label for="">Tên người dùng</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.user_name)
                            </dd>

                            <dt>
                                <label for="">Email Address</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.user_email)
                            </dd>

                            <dt>
                                <label for="">Home Address</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.user_address)
                            </dd>

                            <dt>
                                <label for="">Phone Number</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.user_phone)
                            </dd>
                        </dl>
                    </div>
                    <p style="padding-left:150px">
                        @Html.ActionLink("Thay đổi", "EditUser", new { id = Model.user_id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Xem lịch sử mua hàng", "History", null, new { @class = "btn btn-primary"})
                    </p>
                </div>
            </div>
        </div>
      
    </section>


