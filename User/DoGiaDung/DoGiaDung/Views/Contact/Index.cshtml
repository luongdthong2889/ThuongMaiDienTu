
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/img/BANNER WEBSITE.jpg" style="width:100%; height:500px" alt="fashion img">
</section>
<!-- / catg header banner section -->
<!-- start contact section -->
<section id="aa-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-contact-area">
                    <div class="aa-contact-top">
                        <h2>Luôn hỗ trợ,đồng hành cùng bạn trên mọi sản phẩm</h2>
                    </div>
                    <!-- contact map -->
                    <div class="aa-contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.453582167823!2d106.66530581533425!3d10.776530262137333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f9cc77bfab9%3A0x9a96ec51d74db8a0!2zVHJ1bmcgVMOibSBOZ2_huqFpIE5n4buvIC0gVGluIEjhu41jIEhVRkxJVA!5e0!3m2!1svi!2s!4v1641718784881!5m2!1svi!2s" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <!-- Contact address -->
                    @using (Html.BeginForm("CreateFeedback", "Contact", FormMethod.Post))
                    {
                        <div class="aa-contact-address">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="aa-contact-address-left">
                                        <form class="comments-form contact-form" action="">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" placeholder="Họ Tên" name="Feedname" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="email" placeholder="Email" name="Feedmail" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="tel" placeholder="Số Điện Thoại" name="Feedphone" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <input type="text" placeholder="Địa Chỉ" name="Feedaddress" class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <textarea class="form-control" rows="3" name="Feedmess" placeholder="Message"></textarea>
                                            </div>
                                            <button class="aa-secondary-btn">Send</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="aa-contact-address-right">
                                        <address>
                                            <h4>Đồ gia dụng Việt Nam</h4>
                                            <p>CTTN team design: Lâm Quốc Thông</p>
                                            <p><span class="fa fa-home"></span>828 Sư Vạn Hạnh Phường 12 Quận 10,Thành Phố HCM</p>
                                            <p><span class="fa fa-phone"></span>+ 021.343.7575</p>
                                            <p><span class="fa fa-envelope"></span>Email: support@dogiadungvn.com</p>
                                        </address>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Subscribe section -->
<section id="aa-subscribe">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-subscribe-area">
                    <h3>Cho chúng tôi biết ý kiến của bạn </h3>
                    <form action="" class="aa-subscribe-form">
                        <input type="email" name="" id="" placeholder="Enter your Email">
                        <input type="submit" value="Subscribe">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Subscribe section -->
